<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" styleClass="cs-anchorpane" stylesheets="@style2.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <VBox layoutX="110.0" layoutY="114.0" prefHeight="200.0" prefWidth="500.0">
         <children>
            <Label prefHeight="85.0" prefWidth="386.0" text="EMPLOYEE" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="55.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="10.0" prefHeight="86.0" prefWidth="482.0" text="MANAGERMENT" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="55.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="110.0" layoutY="303.0" prefHeight="86.0" prefWidth="522.0">
         <children>
            <Label prefHeight="30.0" prefWidth="445.0" text="Login in to get in the moment update on things" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="10.0" prefHeight="28.0" prefWidth="396.0" text=" You that interest you " textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="663.0" layoutY="278.0" prefHeight="466.0" prefWidth="500.0">
         <children>
            <Label prefHeight="67.0" prefWidth="171.0" text="LOGIN" textFill="#5e7ff1">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <Label prefHeight="46.0" prefWidth="330.0" text="EMAIL" textFill="#5e7ff1">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="570.0" spacing="10.0">
               <children>
                  <FontAwesomeIcon fill="#5e7ff1" glyphName="ENVELOPE" size="3em" />
                  <TextField fx:id="login_email" prefHeight="60.0" prefWidth="434.0" promptText="Type here your email" styleClass="cs-text" stylesheets="@style2.css">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="19.0" prefWidth="570.0">
               <children>
                  <Label fx:id="login_warning_email" prefHeight="18.0" prefWidth="274.0" text="Please type correct your email" textFill="RED" visible="false" />
               </children>
            </HBox>
            <Label layoutX="10.0" layoutY="88.0" prefHeight="46.0" prefWidth="330.0" text="PASSWORD" textFill="#5e7ff1">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="135.0" prefHeight="60.0" prefWidth="570.0" spacing="10.0">
               <children>
                  <FontAwesomeIcon fill="#5e7ff1" glyphName="KEY" size="3em" />
                  <PasswordField fx:id="login_password" prefHeight="60.0" prefWidth="440.0" promptText="Type here your password" styleClass="cs-text" stylesheets="@style2.css">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </PasswordField>
               </children>
            </HBox>
            <Label fx:id="login_warning_password" prefHeight="18.0" prefWidth="274.0" text="Please type correct your password" textFill="RED" visible="false" />
            <VBox alignment="TOP_RIGHT" prefHeight="61.0" prefWidth="500.0">
               <children>
                  <ComboBox fx:id="rote" prefHeight="38.0" prefWidth="459.0" promptText="choose your role" style="-fx-border-color: #5E7FF1;" styleClass="bellow-bor" stylesheets="@styles.css" />
                  <Label fx:id="labelRote" prefHeight="18.0" prefWidth="446.0" text="You need to choose your role" textFill="RED" visible="false" />
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="login_button" mnemonicParsing="false" onAction="#login" prefHeight="66.0" prefWidth="271.0" styleClass="cs-button" stylesheets="@style2.css" text="Log In" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
